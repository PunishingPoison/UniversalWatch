{
    "manifest_version": 3,
    "name": "Universal Watch Party",
    "version": "1.0.0",
    "description": "Watch videos with friends anywhere.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "*://*/*"
    ],
    "action": {
        "default_popup": "index.html"
    },
    "background": {
        "service_worker": "src/background/index.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "src/content/index.jsx"
            ],
            "all_frames": true
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "src/assets/*"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}